# 输出1-100之间的素数
from math import sqrt
def isPrime(x):
    if x==1:
        return False
    k = int(sqrt(x))
    for j in range(2,k+1):
        if x%j==0:
            return False
        return True
if __name__ == '__main__':
    for i in range(2,101):
      if isPrime(i):
          print i,
