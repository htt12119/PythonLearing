# 匿名函数
r = lambda x:x+x
print r(5)

def my_add(x,y):return x+y
print r(5)

def my_add(x,y):return  x+y
print my_add(3,5)

my_add = lambda x,y:x+y
print my_add(3,5)
#the nth Fibonacci number
def fib(n):
    a,b=0,1
    count=1
    while count<n:
        a,b=b,a+b
        count=count+1
    print a
fib(10)
#the nth Fibonacci number
def fib(n):
    if n==0 or n==1:
        return  n
    else:
        return  (fib(n-1)+fib(n-2))

print fib(9)
#Filename:Hanoi.py
def hanoi(a,b,c,n):
    if n==1:
        print a,'->',c
    else:
        hanoi(a,c,b,n-1)
        print a,'->',c
        hanoi(b,a,c,n-1)

hanoi('a','b','c',4)
