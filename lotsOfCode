#Filename:guessnum1.py 猜数字游戏
from random import randint

x = randint(0,300)
print 'Please input a number between 0~300:'
digit = input()
if digit == x:
    print 'Bingo!'
elif digit>x:
    print'Too large,please try again.'
else:
    print 'Too small,please try again.'
 
